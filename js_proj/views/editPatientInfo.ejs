<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
    <h1 class="display-4">Edit Patient</h1>
    <p class="lead">Please edit the patient information.</p>

    <% var p = patient[0] %>

    <form action="/patient/<%= p.patient_ID %>?_method=PATCH" method="POST">
        <div class="form-group" name="margin: 20px; margin-left: 0px">
          <label for="patient_ID">Patient ID</label>
          <input type="text" class="form-control" name="patient_ID" value="<%= p.patient_ID %>" id="patient_ID" placeholder="patient ID" readonly>
      </div>
        <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_name">Patient Name</label>
            <input type="text" class="form-control" name="patient_name" value="<%= p.name %>" id="patient_name" placeholder="patient name" readonly>
        </div>
        <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_gender">Gender</label>
            <input type="text" class="form-control" name="patient_gender" value="<%= p.gender %>" id="patient_gender" placeholder="male/female" >
          </div>
          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_age">Age</label>
            <input type="text" class="form-control" name="patient_age" value="<%= p.age %>" id="patient_age" placeholder="age" >
          </div>
          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_DOB">Date of Birth</label>
            <input type="text" class="form-control" name="patient_DOB" value="<%= p.date_of_birth %>" id="patient_DOB" placeholder="patient date of birth" >
          </div>
          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_phone_num">Phone Number</label>
            <input type="text" class="form-control" name="patient_phone_num" value="<%= p.phone_number %>" id="patient_phone_num" placeholder="phone number" >
          </div>

          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_address">Address</label>
            <input type="text" class="form-control" name="patient_address" value="<%= p.address %>" id="patient_address" placeholder="address" >
          </div>

          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_insurance">Insurance ID</label>
            <input type="number" class="form-control" name="patient_insurance" value="<%= p.insurance_ID %>" id="patient_insurance" placeholder="insurance" >
          </div>

          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_curr_medication">Current Medication</label>
            <input type="text" class="form-control" name="patient_curr_medication" value="<%= p.current_medication %>" id="patient_curr_medication" placeholder="current medication" >
          </div>

          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="patient_health_condition">Health Condition</label>
            <input type="text" class="form-control" name="patient_health_condition" value="<%= p.underlying_health_condition %>" id="patient_health_condition" placeholder="health condition" >
          </div>
        

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<%- include('partials/footer') %>
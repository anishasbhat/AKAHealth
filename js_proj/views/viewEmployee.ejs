<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
    <h1 class="display-4">View Employee Profile</h1>

    <% var p = employee[0] %>

    <form action="/" method="">
      <div class="form-group" name="margin: 20px; margin-left: 0px">
        <label for="employee_ID">Employee ID</label>
        <input type="text" class="form-control" name="employee_ID" value="<%= p.employee_ID %>" id="employee_ID" placeholder="Employee ID" disabled>
      </div>
        <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="employee_name">Employee Name</label>
            <input type="text" class="form-control" name="employee_name" value="<%= p.name %>" id="employee_name" placeholder="Employee Name" disabled>
        </div>
        <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="employee_type">Profession</label>
            <input type="text" class="form-control" name="employee_type" value="<%= p.employee_type %>" id="employee_type" placeholder="Profession" disabled>
          </div>
          <div class="form-group" name="margin: 20px; margin-left: 0px">
            <label for="office">Office</label>
            <input type="text" class="form-control" name="office" value="<%= p.office_name %>" id="office" placeholder="Office" disabled>
          </div>
    </form>
</div>

<%- include('partials/footer') %>
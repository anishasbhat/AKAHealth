<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container-fluid">
    <div style="margin: 50px; text-align: center;">
        <h1>AKA Health Patient Statistics Page</h1>
    </div>
    <form action="/StatPatient_ListByGender" method="POST">
        <label for="employee_ID">Patient List by Gender</label>
        <input type="text" size="20" name="gender" id="gender" placeholder="male/female" >
        <button type="text" class="btn btn-primary">GO</button>
    </form>

    <label><%= list_by_gender %></label> <!-- add ejs result -->

    <div>
        <br>
    </div>

    <form action="/StatPatient_ListByAge" method="POST">
        <label for="employee_ID">Patient List in Age Range</label>
        <input type="number" size="1" name="low_age" id="low_age" placeholder="0">
        <input type="number" size="1" name="high_age" id="high_age" placeholder="100" >
        <button type="text" class="btn btn-primary">GO</button>
    </form>

    <label><%= list_by_age %></label>

    <div>
        <br>
    </div>

    <form action="/StatPatient_MostAppts" method="POST">
        <label for="employee_ID">Patient(s) with the most appointments</label>
        <button type="text" class="btn btn-primary">GO</button>
    </form> 
    
    <% if (patients_with_most_appts != null) { %>
        <label>Patient <%= patients_with_most_appts.name %> has had <%= patients_with_most_appts.cnt %> Appointments</label>
    <% } %>

    <div>
        <br>
    </div>

    <form action="/StatPatient_CommonIll" method="POST">
        <label for="employee_ID">Most common Illness(es)</label>
        <button type="text" class="btn btn-primary">GO</button>
    </form>

    <% if (most_common_illnesses != null) { %>
        <label><%= most_common_illnesses.cnt %> patients have <%= most_common_illnesses.symptoms %></label>
    <% } %>

    <div>
        <br>
    </div>

    <form action="/StatPatient_getMeds" method="POST">
        <label for="employee_ID">get the number of patients currently taking medication</label>
        <button type="text" class="btn btn-primary">GO</button>
    </form>

    <label><%= get_num_meds %></label>

</div>


<%- include('partials/footer') %>
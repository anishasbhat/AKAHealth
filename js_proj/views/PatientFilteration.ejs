<%- include('partials/header') %>
<%- include('partials/navbar') %>

    <div class="container">
        <h1 class="display-4">Patient Filteration</h1>
        <p class="lead">Please enter the patient information below.</p>
    
        <form action="/PatientFilteration" method="POST">
            <div class="form-group" name="margin: 20px; margin-left: 0px">
                <label for="name">Patient Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="name" >
            </div>
            <div class="form-group" name="margin: 20px; margin-left: 0px">
                <label for="patient_DOB">Date of Birth</label>
                <input type="text" class="form-control" name="patient_DOB" id="patient_DOB" placeholder="Patient Date of Birth" >
                <div id="patient_DOB" class="form-text">Please enter the date of birth in the following format: YYYY-MM-DD </div>

            </div>

            <div class="mb-3 form-check"></div>
                <button type="text" class="btn btn-success">Submit</button>
            </div>
        </form>

        <div>
            <table class="table" width='80%'>
 
                
                
                <% if (data) { %>
                    <tr style='text-align:left; background-color:#CCC'>
                        <th>patient_ID</th>
                        <th>name</th>
                        <th>age</th>
                        <th>date_of_birth</th>
                        <th>gender</th>
                    </tr>
                    <% data.forEach(function(patient){ %>
                        <tr>
                            <td><%= patient.patient_ID %></td>
                            <td><%= patient.name %></td>
                            <td><%= patient.age %></td>
                            <td><%= patient.date_of_birth %></td>
                            <td><%= patient.gender %></td>
                        </tr>
                    <% }) %>
                <% } %>
             
            </table>

        </div>
    </div>
    
    <%- include('partials/footer') %>

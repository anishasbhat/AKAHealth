<%- include('partials/header') %>
<%- include('partials/navbar') %>

    <div class="container">
        <h1 class="display-4">Add Entry to Appointment Table</h1>
        <p class="lead">Please enter the appointment information.</p>
    
        <form action="/AddToAppointmentTable" method="POST">
            <div class="form-group">
                <label for="employee_ID">Employee ID</label>
                <input type="number" class="form-control" name="employee_ID" value ="<%= employee_id %>" id="employee_ID" placeholder="Employee ID" >
            </div>
            <div class="form-group">
                <label for="patient_ID">Patient ID</label>
                <input type="number" class="form-control" name="patient_ID" value ="<%= id %>" id="patient_ID" placeholder="Patient ID" >
            </div>
            <div class="form-group">
                <label for="patient_name">Patient Name</label>
                <input type="text" class="form-control" name="patient_name" value= "<%= name %>" id="patient_name" placeholder="Patient Name" >
            </div>
            <div class="form-group">
                <label for="date">Appointment Date</label>
                <input type="text" class="form-control" name="date" id="date" placeholder="YYYY-MM-DD" >
                <div id="date" class="form-text">Please enter the date in the following format: YYYY-MM-DD </div>
            </div>
            <div class="form-group">
                <label for="time">Appointment Time </label>
                <input type="time" class="form-control" name="time" id="time" placeholder="0:00" >
            </div>
            <div class="form-group">
                <label for="symptoms">Symptoms</label>
                <input type="text" class="form-control" name="symptoms" id="symptoms" placeholder="Symptoms" >
            </div>
            <div class="form-group">
                <label for="treatment">Treatment</label>
                <input type="text" class="form-control" name="treatment" id="treatment" placeholder="Treatment" >
            </div>
            <div class="form-group">
                <label for="doctor_type">Doctor Type/Profession</label>
                <input type="text" class="form-control" name="doctor_type" id="doctor_type" placeholder="Doctor Type/Profession" >
            </div>
            
            <div class="form-check">
                <button type="text" class="btn btn-primary" style="margin-top: 20px;">Submit</button>
            </div>
            
            <!-- <button type="submit" class="btn btn-warning">Change Patient</button> -->
            
        </form>
        <div class="mb-3 form-check"></div>
            
            <a href="/MainMenu">
                <button type="submit" class="btn btn-success">Main Menu</button>
            </a>
            
        </div>
    </div>
    <%- include('partials/footer') %>
